<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordLessonsFragment">

    <View
        android:id="@+id/back_to_fragment_home_view"
        android:layout_width="120dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <ImageButton
        android:id="@+id/back_to_fragment_home_image_button"
        android:src="@drawable/back_blue"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/back_to_fragment_home_view"
        app:layout_constraintLeft_toLeftOf="@+id/back_to_fragment_home_view"
        app:layout_constraintBottom_toBottomOf="@+id/back_to_fragment_home_view"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/back_to_main_fragment_text_view"
        android:text="戻る"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/back_to_fragment_home_image_button"
        app:layout_constraintLeft_toRightOf="@+id/back_to_fragment_home_image_button"
        app:layout_constraintBottom_toBottomOf="@+id/back_to_fragment_home_image_button"
        />

    <TextView
        android:id="@+id/since_start_lessons_text_view"
        android:text="習い事を開始し始めてから"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_to_fragment_home_view"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        />

    <EditText
        android:id="@+id/xday_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/since_start_lessons_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/xday_text_view"
        android:text="日経過"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/xday_edit_text"
        app:layout_constraintLeft_toRightOf="@+id/xday_edit_text"
        app:layout_constraintBottom_toBottomOf="@+id/xday_edit_text"
        />

    <EditText
        android:id="@+id/xweek_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/xday_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/xweek_text_view"
        android:text="週間経過"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/xweek_edit_text"
        app:layout_constraintLeft_toRightOf="@+id/xweek_edit_text"
        app:layout_constraintBottom_toBottomOf="@+id/xweek_edit_text"
        />

    <EditText
        android:id="@+id/xmonth_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/xweek_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/xmonth_text_view"
        android:text="ヶ月経過"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/xmonth_edit_text"
        app:layout_constraintLeft_toRightOf="@+id/xmonth_edit_text"
        app:layout_constraintBottom_toBottomOf="@+id/xmonth_edit_text"
        />

    <EditText
        android:id="@+id/xyear_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/xmonth_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/xyear_text_view"
        android:text="年経過"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/xyear_edit_text"
        app:layout_constraintLeft_toRightOf="@+id/xyear_edit_text"
        app:layout_constraintBottom_toBottomOf="@+id/xyear_edit_text"
        />

    <EditText
        android:id="@+id/xyen_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/xyear_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/xyen_text_view"
        android:text="万円"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/xyen_edit_text"
        app:layout_constraintLeft_toRightOf="@+id/xyen_edit_text"
        app:layout_constraintBottom_toBottomOf="@+id/xyen_edit_text"
        />

</androidx.constraintlayout.widget.ConstraintLayout>